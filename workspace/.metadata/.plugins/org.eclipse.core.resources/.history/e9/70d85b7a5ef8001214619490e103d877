package tags;

import java.io.DataInput;
import java.io.DataOutput;
import java.io.IOException;

import org.apache.hadoop.io.WritableComparable;

/**
 * Object containing a tag value as an integer and a Point.
 * Used to communicate in the Hama version of K-Means Clustering
 * @author stevenb
 * @date 29-07-2013
 */
public class PointMessage implements WritableComparable<PointMessage> {
	
	private int tag;
	private Point point;
	
	public PointMessage(int tag, Point point) {
		this.tag = tag;
		this.point = point;
	}
	
	public PointMessage() {
		this(0, null);
	}
	
	public int getTag() {
		return tag;
	}
	
	public void setTag(int tag) {
		this.tag = tag;
	}
	
	public Point getPoint() {
		return point;
	}
	
	public void setPoint(Point point) {
		this.point = point;
	}
	
	@Override
	public String toString() {
		return tag + " " + point.toString();
	}
	
	@Override
	public void readFields(DataInput in) throws IOException {
		in.readInt();
		point.readFields(in);
	}
	
	@Override
	public void write(DataOutput out) throws IOException {
		out.writeInt(tag);
		point.write(out);
	}
	
	@Override
	public int compareTo(PointMessage other) {
		int cmp = tag - other.gettag();
		if (cmp != 0) {
			return cmp;
		}
		return point.compareTo(other.getPoint());
	}
	
}
